<odoo>
    <record id="view_crm_lead_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="lead_score"/>
                        <field name="supplier_needed"/>
                    </group>
                    <footer>
                        <button name="action_create_supplier_order" string="Create Supplier Order" type="object" class="oe_highlight"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
